&НаСервере
Процедура ПересчитатьИтоги()
	ЭтаФорма.Итоги.Очистить();
	
	СтрокаИтогов=ЭтаФорма.Итоги.Добавить();
	СтрокаИтогов.Показатель="Сумма";
	СтрокаИтогов.Всего=Объект.ТорговыеТочки.Итог("Сумма");
	ПолучитьИтог(Перечисления.АК_ПричиныБоя.ПустаяСсылка(),СтрокаИтогов.НеОбработано,Ложь);
	ПолучитьИтог(Перечисления.АК_ПричиныБоя.Брак,СтрокаИтогов.Брак,Ложь);
	ПолучитьИтог(Перечисления.АК_ПричиныБоя.НеВыяснено,СтрокаИтогов.НеВыяснено,Ложь);
	ПолучитьИтог(Перечисления.АК_ПричиныБоя.Транспорт,СтрокаИтогов.Транспорт,Ложь);
	ПолучитьИтог(Перечисления.АК_ПричиныБоя.Склад,СтрокаИтогов.Склад,Ложь);
	
	СтрокаИтогов=ЭтаФорма.Итоги.Добавить();
	СтрокаИтогов.Показатель="Количество";
	СтрокаИтогов.Всего=Объект.ТорговыеТочки.Итог("Колво");
	ПолучитьИтог(Перечисления.АК_ПричиныБоя.ПустаяСсылка(),СтрокаИтогов.НеОбработано,Истина);
	ПолучитьИтог(Перечисления.АК_ПричиныБоя.Брак,СтрокаИтогов.Брак,Истина);
	ПолучитьИтог(Перечисления.АК_ПричиныБоя.НеВыяснено,СтрокаИтогов.НеВыяснено,Истина);
	ПолучитьИтог(Перечисления.АК_ПричиныБоя.Транспорт,СтрокаИтогов.Транспорт,Истина);
	ПолучитьИтог(Перечисления.АК_ПричиныБоя.Склад,СтрокаИтогов.Склад,Истина);

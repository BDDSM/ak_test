// Процедура печатает выбранный документ 
// Печатается та форма, которая была отпечатана при нажатии в документе кнопки
// печати по умолчанию
//
Процедура ДействиеПечать(Кнопка)

	Если ЭтаФорма.ЭлементыФормы.ДокументСписок.ТекущаяСтрока = Неопределено тогда
		Возврат
	КонецЕсли;

	УниверсальныеМеханизмы.НапечататьДокументИзФормыСписка(ЭтаФорма.ЭлементыФормы.ДокументСписок.ТекущаяСтрока.ПолучитьОбъект());

КонецПроцедуры // ДействиеПечать()

Процедура ДействияФормыПакетнаяПечать(Кнопка)
	Обработка = Обработки.АК_ПакетнаяПечатьАктовСверкиВзаиморасчетов.Создать();
	Форма = Обработка.ПолучитьФорму("Форма");
	Для Каждого ЭлементОтбора Из Отбор Цикл
		Если ЭлементОтбора.Использование Тогда
			Если ЭлементОтбора.Имя = "Дата" Тогда
				Форма.НачПериода = ЭлементОтбора.ЗначениеС;
				Форма.КонПериода = ЭлементОтбора.ЗначениеПо;
			Иначе
				//ОтборФормы=Форма.ЭлементыФормы.Документы.ОтборСтрок[ЭлементОтбора.Имя];
				ЗаполнитьЗначенияСвойств(Форма.ЭлементыФормы.Документы.ОтборСтрок[ЭлементОтбора.Имя],ЭлементОтбора,,"Значение");
				Если ТипЗнч(Форма.ЭлементыФормы.Документы.ОтборСтрок[ЭлементОтбора.Имя].Значение) = Тип("СписокЗначений") Тогда
					Форма.ЭлементыФормы.Документы.ОтборСтрок[ЭлементОтбора.Имя].Значение.ЗагрузитьЗначения(ЭлементОтбора.Значение.ВыгрузитьЗначения());			
				Иначе
					Форма.ЭлементыФормы.Документы.ОтборСтрок[ЭлементОтбора.Имя].Значение = ЭлементОтбора.Значение;		
				КонецЕсли;
			КонецЕсли;
		КонецЕсли;
	КонецЦикла;
	Форма.Открыть();
КонецПроцедуры

Процедура ДействияФормыСводныйОтчет(Кнопка)
	
	Документы.АктСверкиВзаиморасчетов.ПолучитьФорму("СводнаяИнформация").Открыть();
	
КонецПроцедуры

Процедура ДействияФормыАнализАктов(Кнопка)
	
	ОткрытьФорму("Отчет.АнализАктовСверки.Форма.ФормаОтчета");
	
КонецПроцедуры

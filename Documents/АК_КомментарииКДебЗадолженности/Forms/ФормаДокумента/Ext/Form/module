Перем мВидКомментария;


Процедура ПередОткрытием(Отказ, СтандартнаяОбработка)
	//+++АК sils 19.07.2017 ИП-00015657.07
	Если ЭтоНовый() Тогда
		Пользователь = ПараметрыСеанса.ТекущийПользователь;
		Если ЗначениеЗаполнено(ПараметрОбъектКопирования) Тогда
			Дата = ТекущаяДата();
		КонецЕсли;
	КонецЕсли;
	//---АК
КонецПроцедуры

Процедура ВидКомментарияОбработкаВыбора(Элемент, ВыбранноеЗначение, СтандартнаяОбработка)
	СкрытьПогашение(ВыбранноеЗначение);
КонецПроцедуры

Процедура СкрытьПогашение(мВидКомментария = Неопределено)

	Если НЕ мВидКомментария = Справочники.АК_ВидыКомментариев.Долг тогда
		ЭлементыФормы.ГрафикПогашенияПДЗ.Видимость = Ложь;
		ЭлементыФормы.ГрафикПогашенияПДЗНадпись.Видимость = Ложь;
		ЭлементыФормы.ДатаЗакрытияПДЗ.Видимость = Ложь;
		ЭлементыФормы.НадписьДатаЗакрытияПДЗ.Видимость = Ложь;
		ЭлементыФормы.КоманднаяПанель1.Видимость = Ложь;
	Иначе 
		ЭлементыФормы.ГрафикПогашенияПДЗ.Видимость = Истина;
		ЭлементыФормы.ГрафикПогашенияПДЗНадпись.Видимость = Истина;
		ЭлементыФормы.ДатаЗакрытияПДЗ.Видимость = Истина;
		ЭлементыФормы.НадписьДатаЗакрытияПДЗ.Видимость = Истина;
		ЭлементыФормы.КоманднаяПанель1.Видимость = Истина;
	КонецЕсли;	

КонецПроцедуры

Процедура ПриОткрытии()
	СкрытьПогашение(ВидКомментария);
КонецПроцедуры


&НаСервере
Процедура ПриСозданииНаСервере(Отказ, СтандартнаяОбработка)
	
	МК = Параметры.МассивКартинок;
	
	Для каждого Стр Из МК Цикл
	
		НоваяСтрока = Картинки.Добавить();
		НоваяСтрока.Картинка = Стр;
	
	КонецЦикла; 
	
	Текущая = 0;
	ТекущаяКартинка = Картинки[0].Картинка;
	
	
КонецПроцедуры

&НаКлиенте
Процедура ТекущаяКартинкаНажатие(Элемент, СтандартнаяОбработка)
	Вперед();
КонецПроцедуры

&НаКлиенте
Процедура КнопкаВперед(Команда)
	Вперед();
КонецПроцедуры

&НаКлиенте
Процедура КнопкаНазад(Команда)
	Назад();
КонецПроцедуры

Процедура Вперед()
	
	Текущая = Текущая + 1;
	Если Текущая = Картинки.Количество() Тогда
		Текущая = 0;
	КонецЕсли;
	ТекущаяКартинка = Картинки[Текущая].Картинка;
	
КонецПроцедуры

Процедура Назад()
	
	Текущая = Текущая - 1;
	Если Текущая = -1 Тогда
		Текущая = Картинки.Количество()-1;
	КонецЕсли;
	ТекущаяКартинка = Картинки[Текущая].Картинка;
	
КонецПроцедуры

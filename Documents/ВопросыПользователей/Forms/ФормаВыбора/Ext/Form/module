
Процедура ПоискПоСодержимому(НазваниеРеквизита, ВыбЗначение, ВидСравнения)
	Если СокрЛП(ВыбЗначение) <> "" ИЛИ ЗначениеЗаполнено(ВыбЗначение) Тогда
		ДокументСписок.Отбор[НазваниеРеквизита].ВидСравнения 	= ВидСравнения;
		ДокументСписок.Отбор[НазваниеРеквизита].Значение		= ВыбЗначение;
		ДокументСписок.Отбор[НазваниеРеквизита].Использование	= Истина;
	Иначе
	    ДокументСписок.Отбор[НазваниеРеквизита].Использование	= Ложь;
	КонецЕсли;
КонецПроцедуры

Процедура НомерДляПоискаПриИзменении(Элемент)
	ПоискПоСодержимому("Номер", Элемент.Значение, ВидСравнения.Содержит);
КонецПроцедуры

Процедура НомерДляПоискаАвтоПодборТекста(Элемент, Текст, ТекстАвтоПодбора, СтандартнаяОбработка)
	ПоискПоСодержимому("Номер", Элемент.Значение, ВидСравнения.Содержит);
КонецПроцедуры

Процедура ТекстПоискаПриИзменении(Элемент)
	ПоискПоСодержимому("Вопрос", Элемент.Значение, ВидСравнения.Содержит);
КонецПроцедуры

Процедура АвторПриИзменении(Элемент)
	ПоискПоСодержимому("Автор", Элемент.Значение, ВидСравнения.Равно);
КонецПроцедуры

Процедура ПоискПоКатегорииПриИзменении(Элемент)
	ПоискПоСодержимому("Категория", Элемент.Значение, ВидСравнения.Равно);
КонецПроцедуры

Процедура ДокументСписокПриАктивизацииСтроки(Элемент)
	ТекСтрока = ЭлементыФормы.ДокументСписок.ТекущаяСтрока;
	Если ТекСтрока <> Неопределено Тогда
		ПолныйТекстВопроса = ТекСтрока.Вопрос;
	Иначе
		ПолныйТекстВопроса = "";
	КонецЕсли;
КонецПроцедуры

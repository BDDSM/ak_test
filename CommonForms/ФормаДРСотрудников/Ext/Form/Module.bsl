
&НаСервере
Процедура ПриСозданииНаСервере(Отказ, СтандартнаяОбработка)
	
	Для н = 0 По 5 Цикл
		Запрос = Новый Запрос();
		Запрос.УстановитьПараметр("День", День(ТекущаяДата() + 86400*н));
		Запрос.УстановитьПараметр("Месяц", Месяц(ТекущаяДата() + 86400*н));
		Запрос.Текст = "ВЫБРАТЬ
		               |	ФизическиеЛица.Ссылка,
		               |	ФизическиеЛица.ДатаРождения
		               |ИЗ
		               |	Справочник.ФизическиеЛица КАК ФизическиеЛица
		               |ГДЕ
		               |	ДЕНЬ(ФизическиеЛица.ДатаРождения) = &День
		               |	И МЕСЯЦ(ФизическиеЛица.ДатаРождения) = &Месяц
		               |	И ФизическиеЛица.УведомлятьОДнеРождения = ИСТИНА
		               |
		               |УПОРЯДОЧИТЬ ПО
		               |	ФизическиеЛица.Наименование";
					   
		Выборка = Запрос.Выполнить().Выбрать();
		Пока Выборка.Следующий() Цикл
			СтрокаДоб = Сотрудники.Добавить();
			СтрокаДоб.Сотрудник = Выборка.Ссылка;
			СтрокаДоб.ДатаРождения = Выборка.ДатаРождения;
		КонецЦикла;	
	КонецЦикла;
	
	Если Сотрудники.Количество() = 0 Тогда
		Отказ = Истина;
	КонецЕсли;	
	
КонецПроцедуры

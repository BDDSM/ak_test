
Процедура ВыбратьЦветНажатие(Элемент)
	Диалог = Новый ДиалогВыбораЦвета();
	//Попытка 
	//	Диалог.Цвет = Цвет;
	//Исключение	
	//КонецПопытки;	
	//Если Диалог.Выбрать() Тогда
	//	Цвет = Диалог.Цвет;	
	//КонецЕсли;
	Диалог.Цвет = Новый Цвет(Красный,Зеленый,Синий);
	Если Диалог.Выбрать() Тогда
		Красный = Диалог.Цвет.Красный;
		Зеленый = Диалог.Цвет.Зеленый;
		Синий = Диалог.Цвет.Синий;
	КонецЕсли;
КонецПроцедуры

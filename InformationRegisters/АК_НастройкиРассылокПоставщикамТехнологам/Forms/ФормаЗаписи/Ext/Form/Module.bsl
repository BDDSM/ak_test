перем Поставщик;
	Если ТипЗнч(Параметры)=Тип("ДанныеФормыСтруктура") тогда
		Параметры.Свойство("Поставщик",Поставщик);
		Если ЗначениеЗаполнено(Поставщик) тогда
			Запись.Поставщик=Поставщик;
		КонецЕсли;
		Элементы.Поставщик.Доступность=НЕ ЗначениеЗаполнено(Запись.Поставщик);
	КонецЕсли;


Процедура ПриОткрытии()
	Пользователь = ПараметрыСеанса.ТекущийПользователь;
	Прочитать();
	Пользователь = ПараметрыСеанса.ТекущийПользователь;
	Админ = МодульФорум.ПолныеПраваНаФоруме();
	ЭлементыФормы.Пользователь.Доступность 			= Админ;
	ЭлементыФормы.ГруппаПользователя.Доступность 	= Админ;
	ЭлементыФормы.АдминистраторФорума.Доступность 	= Админ;
	Клянусь = Истина;
КонецПроцедуры

Процедура ПользовательПриИзменении(Элемент)
	//Прочитать();
	Пользователь = Элемент.Значение;
КонецПроцедуры

Процедура ПередЗаписью(Отказ)
	Если МодульФорум.НезаполненыОбязательныеПоля(ЭтаФорма) Тогда
		Отказ = Истина;
		Возврат;
	КонецЕсли;
	Если СокрЛП(Емайл) <> "" И НЕ МодульФорум.КорректныйЕмайл(Емайл) Тогда
		Предупреждение("Неправильный адрес Емайл", 10);
		ТекущийЭлемент = ЭлементыФормы.Емайл;
		Отказ = Истина;
	КонецЕсли;
КонецПроцедуры


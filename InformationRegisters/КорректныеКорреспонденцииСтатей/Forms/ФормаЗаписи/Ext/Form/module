Процедура ПриОткрытии()
	Если ЗначениеЗаполнено(ЭлементыФормы.СтатьяДт.Значение) Тогда
		Массив = Новый Массив;
		Если ТипЗнч(ЭлементыФормы.СтатьяДт.Значение) = Тип("СправочникСсылка.СтатьиДоходовРасходов") Тогда
			Массив.Добавить(Тип("СправочникСсылка.СтатьиДвиженияДенежныхСредств"));
			СтатьяКт = Справочники.СтатьиДвиженияДенежныхСредств.ПустаяСсылка();
		ИначеЕсли ТипЗнч(ЭлементыФормы.СтатьяДт.Значение) = Тип("СправочникСсылка.СтатьиДвиженияДенежныхСредств") Тогда
			Массив.Добавить(Тип("СправочникСсылка.СтатьиДоходовРасходов"));
			СтатьяДт = Справочники.СтатьиДоходовРасходов.ПустаяСсылка();
		КонецЕсли;
		ЭлементыФормы.СтатьяКт.ОграничениеТипа = новый ОписаниеТипов(Массив);
		ЭлементыФормы.СтатьяКт.ВыбиратьТип=Ложь;
	КонецЕсли;
	Если ЗначениеЗаполнено(ЭлементыФормы.СтатьяКт.Значение) Тогда
		Массив = Новый Массив;
		Если ТипЗнч(ЭлементыФормы.СтатьяКт.Значение) = Тип("СправочникСсылка.СтатьиДоходовРасходов") Тогда
			Массив.Добавить(Тип("СправочникСсылка.СтатьиДвиженияДенежныхСредств"));
			СтатьяКт = Справочники.СтатьиДвиженияДенежныхСредств.ПустаяСсылка();
		ИначеЕсли ТипЗнч(ЭлементыФормы.СтатьяКт.Значение) = Тип("СправочникСсылка.СтатьиДвиженияДенежныхСредств") Тогда
			Массив.Добавить(Тип("СправочникСсылка.СтатьиДоходовРасходов"));
			СтатьяДт = Справочники.СтатьиДоходовРасходов.ПустаяСсылка();
		КонецЕсли;
		ЭлементыФормы.СтатьяДт.ОграничениеТипа = новый ОписаниеТипов(Массив);
		ЭлементыФормы.СтатьяДт.ВыбиратьТип=Ложь;
	КонецЕсли;
	// Вставить содержимое обработчика.
КонецПроцедуры


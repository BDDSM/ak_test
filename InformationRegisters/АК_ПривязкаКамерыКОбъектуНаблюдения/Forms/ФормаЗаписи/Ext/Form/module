
Процедура НадписьРазметитьНажатие(Элемент)
	
	//
	Форма = Обработки.РаботаСКамерами_РазметкаРакурсов.ПолучитьФорму("Форма", ЭтаФорма);
	Форма.ТекущийМагазин = ЭлементыФормы.Магазин.Значение;
	Форма.ТекущаяКамера = ЭлементыФормы.IDКамеры.Значение;
	Форма.ТекущийОбъектНаблюдения = ЭлементыФормы.ОбъектНаблюдения.Значение;
	
	//
	Результат = Форма.ОткрытьМодально();
	Если ТипЗнч(Результат) = Тип("Структура") Тогда
		
		//
		ЭлементыФормы.Магазин.Значение = Результат.Магазин;
		ЭлементыФормы.IDКамеры.Значение = Результат.Камера;
		ЭлементыФормы.ОбъектНаблюдения.Значение = Результат.ОбъектНаблюдения;
		
		//
		ЭлементыФормы.X1.Значение = Результат.X1;
		ЭлементыФормы.X2.Значение = Результат.X2;
		ЭлементыФормы.X3.Значение = Результат.X3;
		ЭлементыФормы.X4.Значение = Результат.X4;
		
		//
		ЭлементыФормы.Y1.Значение = Результат.Y1;
		ЭлементыФормы.Y2.Значение = Результат.Y2;
		ЭлементыФормы.Y3.Значение = Результат.Y3;
		ЭлементыФормы.Y4.Значение = Результат.Y4;
		
	КонецЕсли;	
	
КонецПроцедуры

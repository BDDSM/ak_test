&НаСервере
Процедура ЗаполнитьНомераНедели()
	
	//
	ТЗ = "ВЫБРАТЬ РАЗЛИЧНЫЕ
	     |	СоответствиеДатДнямНедели.НомерНедели КАК НомерНедели
	     |ИЗ
	     |	РегистрСведений.СоответствиеДатДнямНедели КАК СоответствиеДатДнямНедели
	     |ГДЕ
	     |	СоответствиеДатДнямНедели.Дата МЕЖДУ &НачалоПериода И &КонецПериода
	     |
	     |УПОРЯДОЧИТЬ ПО
	     |	НомерНедели";
		 
	//
	ПЗ = Новый ПостроительЗапроса;
	ПЗ.Текст = ТЗ;
	
	//
	ПЗ.Параметры.Вставить("НачалоПериода", НачалоНедели(ТекущаяДата()));
	ПЗ.Параметры.Вставить("КонецПериода", НачалоНедели(ТекущаяДата() + 365*24*60*60));
	
	//
	ПЗ.Выполнить();
	
	//
	НомераНедели.Загрузить(ПЗ.Результат.Выгрузить());
	
КонецПроцедуры

&НаСервере
Процедура ПриСозданииНаСервере(Отказ, СтандартнаяОбработка)
	
	//
	ЗаполнитьНомераНедели();
	
КонецПроцедуры

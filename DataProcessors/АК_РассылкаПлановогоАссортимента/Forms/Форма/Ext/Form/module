
Процедура ПриОткрытии()
	
	СтруктураПараметров = ЭтотОбъект.ПрочитатьПараметрыИзКонстанты();

	ЗаполнитьЗначенияСвойств(ЭтотОбъект, СтруктураПараметров);
	
КонецПроцедуры

Процедура СохранитьИВыйти(Кнопка)
	
	СтруктураПараметров = ЭтотОбъект.ПрочитатьПараметрыИзКонстанты();
	
	ЗаполнитьЗначенияСвойств(СтруктураПараметров, ЭтотОбъект );
	
	ЭтотОбъект.СохранитьПараметрыВКонстанту(СтруктураПараметров);
	
КонецПроцедуры

Процедура ВыполнитьРассылкуНажатие(Элемент)
	
	ЭтотОбъект.ВыполнитьПолнуюРассылку();
	
	ПриОткрытии();
	
КонецПроцедуры

Процедура ПосмотретьЛогиНажатие(Элемент)
	текстЛог = "";
	Для каждого стр Из МассивЛог Цикл
		
		текстЛог = текстЛог + ?(ЗначениеЗаполнено(текстЛог),символы.ПС +  "-----------------------------" + символы.ПС, "");
		
		текстЛог = текстЛог + стр;
		
	КонецЦикла;
	
	Сообщить(текстЛог);
	
КонецПроцедуры



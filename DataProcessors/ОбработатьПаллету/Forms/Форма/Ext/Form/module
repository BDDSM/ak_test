
Процедура КнопкаВыполнитьНажатие(Кнопка)
	обк = Паллета.Скопировать();
	обк.ДатаСоздания = ТекущаяДата();
	обк.ИД = Неопределено;
	
	обк.Записать();
КонецПроцедуры

Процедура ПроверитьТоварНажатие(Элемент)
	Структура = Новый Структура("Паллета,Номенклатура,Характеристика, ДатаПроизводства",
		"" + Паллета.УникальныйИдентификатор(), "" + Номенклатура.УникальныйИдентификатор(), "" + Характеристика.УникальныйИдентификатор(), ДатаПроизводства);
	
	Результат = ТоварЕстьНаПаллетеРезультат(Структура);
	
	Если Результат.Свойство("Ошибка") Тогда
		Сообщить(Результат.Ошибка);
	ИначеЕсли Результат.Свойство("ОК") Тогда 
		Предупреждение("ОК");
	КонецЕсли;
КонецПроцедуры

Процедура СоздатьПаллетуНажатие(Элемент)
	Структура = Новый Структура("Паллета,Номенклатура,Характеристика, ДатаПроизводства, ВзятоеКоличество",
		"" + Паллета.УникальныйИдентификатор(),
		"" + Номенклатура.УникальныйИдентификатор(), 
		"" + Характеристика.УникальныйИдентификатор(), 
		ДатаПроизводства,
		1);
	
	Результат = ПересоздатьПаллетуРезультат(Структура);
	 
	Если Результат.Свойство("Ошибка") Тогда
		Сообщить(Результат.Ошибка);
	ИначеЕсли Результат.Свойство("ОК") Тогда 
		Предупреждение("ОК");
	КонецЕсли;
КонецПроцедуры


Процедура ОткрытьПоБыстромуДоступу(Клавиша)
	
	Запрос = Новый Запрос();
	Запрос.Текст = "ВЫБРАТЬ
	               |	МенюБыстрогоДоступа.Ссылка
	               |ИЗ
	               |	Справочник.МенюБыстрогоДоступа КАК МенюБыстрогоДоступа
	               |ГДЕ
	               |	МенюБыстрогоДоступа.Владелец = &Владелец
	               |	И (МенюБыстрогоДоступа.ГорячаяКлавиша = &ГорячаяКлавиша ИЛИ МенюБыстрогоДоступа.Родитель.ГорячаяКлавиша = &ГорячаяКлавиша ИЛИ МенюБыстрогоДоступа.Родитель.Родитель.ГорячаяКлавиша = &ГорячаяКлавиша)
	               |	И МенюБыстрогоДоступа.ЭтоГруппа = ЛОЖЬ";
				   
	Запрос.УстановитьПараметр("Владелец", ПараметрыСеанса.ТекущийПользователь);
	Запрос.УстановитьПараметр("ГорячаяКлавиша", Клавиша);
	
	ФормаМеню = Обработки.МенюБыстрогоДоступа.ПолучитьФорму("МенюБыстрогоДоступа");
	ФормаМеню.Открыть();
	Выборка = Запрос.Выполнить().Выбрать();
	Пока Выборка.Следующий() Цикл
		ФормаМеню.ОткрытьФормуПоЭлементуМеню(Выборка.Ссылка);
	КонецЦикла;
	
КонецПроцедуры	


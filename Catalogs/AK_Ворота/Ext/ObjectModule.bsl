
#Область ОбработчикиСобытий

Процедура ПриКопировании(ОбъектКопирования)
	ИД = 0;
КонецПроцедуры

//+++АК LATV 2018.10.18 ИП-00020107
Процедура ПередЗаписью(Отказ)

	Если ОбменДанными.Загрузка Тогда
		Возврат;
	КонецЕсли;
	
	СтартИД = 840000000000000;
	Если ИД <= СтартИД Тогда
		НовыйИД = ОбщегоНазначенияСервер.ПолучитьНовыйУникальныйИдентификатор("AK_Ворота", "ИД");
		Если НовыйИД <= СтартИД Тогда
			НовыйИД = СтартИД + 1;
		КонецЕсли;
		
		ИД = НовыйИД;
	КонецЕсли;

КонецПроцедуры


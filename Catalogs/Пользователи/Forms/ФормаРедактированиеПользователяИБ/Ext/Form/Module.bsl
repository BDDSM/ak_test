&НаСервере
Процедура ПрочитатьРоли(ПользовательНастроек = Неопределено, ТолькоРолиПользователя = Ложь)
	
	Запрос = Новый Запрос;
	
	Если ЗначениеЗаполнено(ПользовательНастроек)
			И ТипЗнч(ПользовательНастроек) = Тип("СправочникСсылка.Пользователи")Тогда
		Запрос.УстановитьПараметр("Ссылка", ПользовательНастроек.ФизЛицо);	
	Иначе
		Запрос.УстановитьПараметр("Ссылка", Объект.ФизЛицо);
	КонецЕсли;
	
	Запрос.Текст =
	"ВЫБРАТЬ
	|	ВЫБОР
	|		КОГДА НЕ СоставРоли1.Ссылка ЕСТЬ NULL 
	|			ТОГДА ИСТИНА
	|		ИНАЧЕ ЛОЖЬ
	|	КОНЕЦ КАК Пометка,
	|	РолиПользователейТипыРолей.Ссылка,
	|	РолиПользователейТипыРолей.Наименование КАК Наименование,
	|	РолиПользователейТипыРолей.ПометкаУдаления,
	|	РолиПользователейТипыРолей.Родитель КАК Родитель,
	|	ВЫБОР
	|		КОГДА НЕ СоставРоли2.Ссылка ЕСТЬ NULL 
	|			ТОГДА ИСТИНА
	|		ИНАЧЕ ЛОЖЬ
	|	КОНЕЦ КАК ПометкаРодитель
	|ИЗ
	|	Справочник.РолиПользователей КАК РолиПользователейТипыРолей
	|		ЛЕВОЕ СОЕДИНЕНИЕ Справочник.РолиПользователей.СоставРоли КАК СоставРоли1
	|		ПО (СоставРоли1.Ссылка = РолиПользователейТипыРолей.Ссылка)
	|			И (СоставРоли1.Сотрудник = &Ссылка)
	|		ЛЕВОЕ СОЕДИНЕНИЕ Справочник.РолиПользователей.СоставРоли КАК СоставРоли2
	|		ПО (СоставРоли2.Ссылка = РолиПользователейТипыРолей.Родитель)
	|			И (СоставРоли2.Сотрудник = &Ссылка)
	|
	|УПОРЯДОЧИТЬ ПО
	|	Родитель ИЕРАРХИЯ,
	|	Наименование";
		 //|ГДЕ
		 //|	(НЕ РолиПользователейТипыРолей.Ссылка.ПометкаУдаления
		 //|			ИЛИ НЕ СоставРоли.Ссылка ЕСТЬ NULL )
		 
	Выборка = Запрос.Выполнить().Выбрать();
		
	//
	//
	Дер = РеквизитФормыВЗначение("ТипыРолей");	
	
	Пока Выборка.Следующий() Цикл
		//Если Выборка.Ссылка = ПланыВидовХарактеристик.НастройкиПользователей.УдалитьИзменениеПользователяВКалендареПользователя Тогда
		//	Продолжить;
		//КонецЕсли;
		//
		//Если НЕ ДоступныЗУПРоли и (Выборка.Ссылка = ПланыВидовХарактеристик.НастройкиПользователей.ОткрыватьПриЗапускеРабочийСтол или
		//	Выборка.Ссылка = ПланыВидовХарактеристик.НастройкиПользователей.ИспользоватьУправленческийРежимРабочегоСтола) Тогда
		//	Продолжить;
		//КонецЕсли;	
		
		СтрокаНастройки = Дер.Строки.Найти(Выборка.Ссылка, "ТипРоли", Истина);
		Если СтрокаНастройки = Неопределено Тогда
			Если НЕ Выборка.Родитель.Пустая() Тогда
				// Найдем группу настройки, если ее нет, то создадим
				СтрокаГруппы = Дер.Строки.Найти(Выборка.Родитель, "ТипРоли", Истина);
				Если СтрокаГруппы = Неопределено Тогда
					Если НЕ (НЕ Выборка.Пометка
								И ТолькоРолиПользователя) Тогда
						СтрокаГруппы = Дер.Строки.Добавить();
						СтрокаГруппы.ТипРоли 		= Выборка.Родитель;
						СтрокаГруппы.ИндексКартинки = 1;
						СтрокаГруппы.Пометка 		= Выборка.ПометкаРодитель;
						СтрокаГруппы.ЭтоРодитель	= Выборка.Пометка;
						
					КонецЕсли; 
				КонецЕсли;
			Иначе
				СтрокаГруппы = Дер;
			КонецЕсли;		
			Если НЕ (НЕ Выборка.Пометка
						И ТолькоРолиПользователя) Тогда
				СтрокаНастройки = СтрокаГруппы.Строки.Добавить();
				СтрокаНастройки.ТипРоли 		= Выборка.Ссылка;
				СтрокаНастройки.ИндексКартинки 	= 1;
				СтрокаНастройки.Пометка 		= Выборка.Пометка;
			КонецЕсли;		
		КонецЕсли;
		
	КонецЦикла;
	
	ЗначениеВРеквизитФормы(Дер, "ТипыРолей");	

КонецПроцедуры

&НаСервере
Процедура ЗаполнитьДанныеРазделаДокументаВорд(ДанныеРаздела)
	
	РазделыТекущегоОтчета = РеквизитФормыВЗначение("Объект").Разделы;
	
	Для Каждого Раздел из РазделыТекущегоОтчета Цикл
		
		ТабДокРаздела   = Раздел.Содержание.Получить();
		Если ТабДокРаздела = неопределено Тогда 
			Продолжить;
		КонецЕсли;
		
		БукваРаздела  = "";
		НомерСтроки   = 0;
		НомерКолонкиН = 0;
		НомерКолонкиК = 0;
		
		НазваниеРаздела = Раздел.Название;
		
		ПолучитьБуквуРазделаИНомераСтрокИКолонок(НазваниеРаздела, БукваРаздела, НомерСтроки, НомерКолонкиН, НомерКолонкиК);
		
		Если БукваРаздела = "" Тогда 
			Продолжить;
		КонецЕсли;
		
		КоличествоСтрок = ТабДокРаздела.ВысотаТаблицы;
		ТекСтрока       = НомерСтроки; 
		
		Пока ТекСтрока <= КоличествоСтрок Цикл
			
			ТекКолонка = НомерКолонкиН;
			
			Пока ТекКолонка <= НомерКолонкиК Цикл 
				
				ИмяЯчейки   = ТабДокРаздела.Область(ТекСтрока,ТекКолонка,ТекСтрока,ТекКолонка).Имя;
				ТекстЯчейки = ТабДокРаздела.Область(ТекСтрока,ТекКолонка,ТекСтрока,ТекКолонка).Текст;
				
				НовСтрокаДанныеРаздела = ДанныеРаздела.Добавить();
				НовСтрокаДанныеРаздела.ИмяОбласти = БукваРаздела + ИмяЯчейки;
				НовСтрокаДанныеРаздела.Значение   = ТекстЯчейки;
				
				ТекКолонка = ТекКолонка + 1;
				
			КонецЦикла;
			
			ТекСтрока = ТекСтрока + 1;
			
		КонецЦикла;
		
	КонецЦикла;
	

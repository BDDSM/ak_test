Процедура УстановитьУсловноеОформление()

	УсловноеОформление.Элементы.Очистить();
	
	//
	
	ВидыОтчета = Отчеты.СравнениеОборотовМеждуБазами.ВидыОтчета();
	Для Каждого ВидОтчета Из ВидыОтчета Цикл
		Элемент = УсловноеОформление.Элементы.Добавить();
		
		КомпоновкаДанныхКлиентСервер.ДобавитьОформляемоеПоле(Элемент.Поля, "ВидОтчета");
		
		ОбщегоНазначенияКлиентСервер.УстановитьЭлементОтбора(Элемент.Отбор, "Список.ВидОтчета", ВидОтчета.Значение);
		
		Элемент.Оформление.УстановитьЗначениеПараметра("Текст", ВидОтчета.Представление);
	КонецЦикла;

КонецПроцедуры


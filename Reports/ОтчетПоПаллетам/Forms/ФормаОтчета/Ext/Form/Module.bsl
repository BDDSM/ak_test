
&НаСервере
Процедура ПриСозданииНаСервере(Отказ, СтандартнаяОбработка)
	Если Параметры.Свойство("ДатаНачала") Тогда
		ДатаНачала=Параметры.ДатаНачала;	
		ДатаОкончания=Параметры.ДатаОкончания;	
		СкладКод=Параметры.СкладКод;	
		Магазин=Параметры.Магазин;	
	    Расшифровка=Истина;
	Иначе
		Сообщить("Этот отчет является вспомогательным по отношению к отчетам Отчет кладовщика на отгрузке и Отчет кладовщика на дебаркадере
		| и запускается при расшифровке их строк (двойном клике), самостоятельно не используется");
		Отказ=Истина;
	КонецЕсли; 
КонецПроцедуры

&НаКлиенте
Процедура ПриОткрытии(Отказ)
	Если Расшифровка Тогда
		Элементы.КомпоновщикНастроекПользовательскиеНастройки.Видимость=Ложь;
		ПриОткрытииСервер();
	КонецЕсли; 
КонецПроцедуры

&НаСервере
Процедура ПриОткрытииСервер()
	ЭлементОтбора = Отчет.КомпоновщикНастроек.ПользовательскиеНастройки.Элементы[0];
	ЭлементОтбора.Использование 	= Истина;
	//ЭлементОтбора.ВидСравнения 		= ВидСравненияКомпоновкиДанных.Равно;
	ЭлементОтбора.Значение 	= ДатаНачала;
	
	
	ЭлементОтбора = Отчет.КомпоновщикНастроек.ПользовательскиеНастройки.Элементы[1];
	ЭлементОтбора.Использование 	= Истина;
	//ЭлементОтбора.ВидСравнения 		= ВидСравненияКомпоновкиДанных.Равно;
	ЭлементОтбора.Значение 	= КонецДня(ДатаОкончания);
	
	ЭлементОтбора = Отчет.КомпоновщикНастроек.ПользовательскиеНастройки.Элементы[2];
	ЭлементОтбора.Использование 	= Истина;
	//ЭлементОтбора.ВидСравнения 		= ВидСравненияКомпоновкиДанных.Равно;
	ЭлементОтбора.Значение 	= Справочники.СтруктурныеЕдиницы.НайтиПоКоду(СкладКод);
	
	ЭлементОтбора = Отчет.КомпоновщикНастроек.ПользовательскиеНастройки.Элементы[3];
	ЭлементОтбора.Использование 	= Истина;
	//ЭлементОтбора.ВидСравнения 		= ВидСравненияКомпоновкиДанных.Равно;
	ЭлементОтбора.Значение 	= Справочники.СтруктурныеЕдиницы.НайтиПоНаименованию(Магазин);
	
	СкомпоноватьРезультат();
	Результат.Область(,1,,1).ШиринаКолонки=20;
	Результат.Область(,3,,3).ШиринаКолонки=15;
	//Результат.Область(,5,,5).ШиринаКолонки=15;
	Результат.Область(,5,,5).ШиринаКолонки=5;
	Результат.Область(,4,,4).ШиринаКолонки=5;
КонецПроцедуры


Процедура ПриОткрытии()
	
	РабочаяБаза = Истина;
	СерверРабочейБазы = "srv-sql02";
	СерверТестовойБазы = "srv-sql02";
	ИмяБД = "BP_corp";
	ИмяТестовойБД = "BP_CORP_deb";

КонецПроцедуры

Процедура ТестоваяБазаПриИзменении(Элемент)
	
	РабочаяБаза = НЕ ТестоваяБаза;
	
КонецПроцедуры

Процедура РабочаяБазаПриИзменении(Элемент)
	
	ТестоваяБаза = НЕ РабочаяБаза;
	
КонецПроцедуры
